---
import Base from "@/layouts/Base.astro";
import Banner from "@/layouts/components/Banner.astro";
import Testimonial from "@/layouts/components/Testimonial.astro";
import Cta from "@/layouts/partials/Cta.astro";
import { getEntryBySlug } from "astro:content";

import Section01 from "@/components/hgweb/Section01.astro";
import Section02 from "@/components/hgweb/Section02.astro";
import SectionProducts from "@/components/hgweb/SectionProducts.astro";
import SectionProductsYzz from "@/components/hgweb/SectionProductsYzz.astro";
import SectionProductsZmes from "@/components/hgweb/SectionProductsZmes.astro";
import SectionProductsEms from "@/components/hgweb/SectionProductsEms.astro";
import SectionCustomer from "@/components/hgweb/SectionCustomer.astro";

const homepage = await getEntryBySlug("homepage", "index");
const { banner, testimonial } = homepage.data;
---

<Base>
  <!-- banner -->
  <Banner banner={banner} />

  <Section01 />
  <Section02 />
  <SectionProducts />

  <SectionProductsYzz />
  <SectionProductsZmes />
  <SectionProductsEms />
  <SectionCustomer />

  <!-- testimonial -->
  <Testimonial testimonial={testimonial} />
  <!-- call to action -->
  <Cta />
</Base>
